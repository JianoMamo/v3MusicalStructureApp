<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MediaPlayerActivity">

    <ImageView
        android:id="@+id/iv_song"
        android:layout_width="@dimen/dp300"
        android:layout_height="@dimen/dp300"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp10"
        android:contentDescription="@string/image_song" />

    <TextView
        android:id="@+id/tv_name_song"
        style="@style/tv_song"
        android:layout_margin="@dimen/dp10" />

    <TextView
        android:id="@+id/tv_name_singer"
        style="@style/tv_song"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp65"
            android:layout_weight="1"
            android:contentDescription="@string/previous_song"
            android:src="@drawable/ic_skip_previous_orange_24dp" />

        <ImageView
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp65"
            android:layout_weight="1"
            android:contentDescription="@string/now_playing"
            android:src="@drawable/ic_play_arrow_orange_24dp" />

        <ImageView
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp65"
            android:layout_weight="1"
            android:contentDescription="@string/next_song"
            android:src="@drawable/ic_skip_next_orange_24dp" />

    </LinearLayout>

</LinearLayout>